<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sora.weather.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_01">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_01_01">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time"
                android:text="@string/time"
                android:textSize="16dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_city"
                android:text="@string/city"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/tv_time"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_01_02"
            android:layout_below="@+id/layout_01_01"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_temperature"
                android:text="@string/temperature"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_refreshTime"
                android:text="@string/refreshTime"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/tv_temperature"
                android:layout_alignBottom="@+id/tv_temperature"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_01_03"
            android:layout_below="@+id/layout_01_02"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_weather"
                android:src="@drawable/d00"
                android:layout_alignTop="@+id/tv_weather"
                android:layout_alignBottom="@+id/tv_weather"
                android:layout_toLeftOf="@+id/tv_weather"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_weather"
                android:text="@string/weather"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_02"
        android:layout_below="@+id/layout_01"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_02_01">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_futuerhour"
                android:text="@string/futurehour"
                android:textSize="16dp"
                android:textColor="@color/white"/>

            <!-- 不同时间的温度等比划分区间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/tv_futuerhour"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour00"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather00"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour00"
                        android:layout_alignRight="@+id/tv_hour00"
                        android:layout_below="@+id/tv_hour00"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature00"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour00"
                        android:layout_alignRight="@+id/tv_hour00"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather00"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour01"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather01"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour01"
                        android:layout_alignRight="@+id/tv_hour01"
                        android:layout_below="@+id/tv_hour01"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature01"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour01"
                        android:layout_alignRight="@+id/tv_hour01"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather01"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour02"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather02"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour02"
                        android:layout_alignRight="@+id/tv_hour02"
                        android:layout_below="@+id/tv_hour02"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature02"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour02"
                        android:layout_alignRight="@+id/tv_hour02"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather02"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour03"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather03"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour03"
                        android:layout_alignRight="@+id/tv_hour03"
                        android:layout_below="@+id/tv_hour03"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature03"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour03"
                        android:layout_alignRight="@+id/tv_hour03"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather03"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour04"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather04"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour04"
                        android:layout_alignRight="@+id/tv_hour04"
                        android:layout_below="@+id/tv_hour04"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature04"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour04"
                        android:layout_alignRight="@+id/tv_hour04"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather04"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour05"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather05"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour05"
                        android:layout_alignRight="@+id/tv_hour05"
                        android:layout_below="@+id/tv_hour05"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature05"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour05"
                        android:layout_alignRight="@+id/tv_hour05"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather05"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_hour06"
                        android:text="@string/hour"
                        android:textSize="16dp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_weather06"
                        android:src="@drawable/d00"
                        android:layout_alignLeft="@+id/tv_hour06"
                        android:layout_alignRight="@+id/tv_hour06"
                        android:layout_below="@+id/tv_hour06"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_temperature06"
                        android:text="@string/temperature"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:layout_alignLeft="@+id/tv_hour06"
                        android:layout_alignRight="@+id/tv_hour06"
                        android:gravity="center"
                        android:layout_below="@id/iv_weather06"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_02_02"
            android:layout_below="@+id/layout_02_01"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info"
                android:text="@string/info"
                android:textSize="16dp"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/tv_info"
                android:paddingTop="15dp">

                <!-- PM2.5-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_pm2.5"
                    android:text="@string/pm"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp" />

                <!-- 空气质量-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_air"
                    android:text="@string/air"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"/>

                <!-- 湿度-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/humidity"
                    android:text="@string/humidity"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"/>

                <!-- 体感温度-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_felt_temperature"
                    android:text="@string/felt_temperature"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"/>

                <!-- 风向风力-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wind"
                    android:text="@string/wind"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"/>

                <!-- 紫外线指数-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_uv_index"
                    android:text="@string/uv_index"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"/>

                <!-- 穿衣指数-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dressing"
                    android:text="@string/dressing"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:paddingLeft="16dp"
                    android:paddingTop="10dp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
